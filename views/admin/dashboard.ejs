<%- include('../partials/header', { title: 'Admin Dashboard' }) %>
    <div class="space-y-12">
        <div class="flex justify-between items-center">
            <h1 class="text-3xl font-bold text-slate-900">Admin Dashboard</h1>
            <a href="/admin/logout"
                class="bg-red-500 text-white font-semibold px-5 py-2 rounded-lg hover:bg-red-600 transition-colors">Logout</a>
        </div>

        <!-- Form Upload -->
        <div class="bg-white p-8 rounded-xl shadow-lg">
            <h2 class="text-2xl font-bold text-slate-800 mb-6 border-b pb-4">Upload Twibbon Baru</h2>
            <form action="/admin/upload" method="POST" enctype="multipart/form-data" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="title" class="block text-sm font-medium text-slate-700">Judul Twibbon</label>
                        <input type="text" id="title" name="title" required placeholder="Contoh: HUT RI ke-79"
                            class="mt-1 block w-full px-4 py-2 border border-slate-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="slug" class="block text-sm font-medium text-slate-700">Slug Unik</label>
                        <input type="text" id="slug" name="slug" pattern="[a-z0-9-]+"
                            title="Hanya huruf kecil, angka, dan tanda hubung (-)" required
                            placeholder="contoh: hut-ri-79"
                            class="mt-1 block w-full px-4 py-2 border border-slate-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>
                <div>
                    <label for="twibbonFile" class="block text-sm font-medium text-slate-700">File Twibbon (Wajib PNG
                        Transparan)</label>
                    <input type="file" id="twibbonFile" name="twibbonFile" accept="image/png" required
                        class="mt-1 block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
                </div>
                <div class="text-right">
                    <button type="submit"
                        class="inline-flex justify-center py-2 px-6 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                        Upload
                    </button>
                </div>
            </form>
        </div>

        <!-- Daftar Twibbon -->
        <div class="bg-white p-8 rounded-xl shadow-lg">
            <h2 class="text-2xl font-bold text-slate-800 mb-6 border-b pb-4">Manajemen Twibbon</h2>
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-slate-600">
                    <thead class="text-xs text-slate-700 uppercase bg-slate-100">
                        <tr>
                            <th scope="col" class="px-6 py-3">Preview</th>
                            <th scope="col" class="px-6 py-3">Judul</th>
                            <th scope="col" class="px-6 py-3">Link Publik</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% twibbons.forEach(twibbon=> { %>
                            <tr class="bg-white border-b hover:bg-slate-50">
                                <td class="px-6 py-4">
                                    <img src="/twibbons/<%= twibbon.filename %>" alt="<%= twibbon.title %>"
                                        class="w-16 h-16 object-cover rounded-md">
                                </td>
                                <td class="px-6 py-4 font-medium text-slate-900">
                                    <%= twibbon.title %>
                                </td>
                                <td class="px-6 py-4">
                                    <a href="/twibbon/<%= twibbon.slug %>" target="_blank"
                                        class="font-medium text-blue-600 hover:underline">/twibbon/<%= twibbon.slug %>
                                            </a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% if (twibbons.length===0) { %>
                <p class="text-center text-slate-500 mt-6">Belum ada twibbon yang diunggah.</p>
                <% } %>
        </div>
    </div>
    <%- include('../partials/footer') %>