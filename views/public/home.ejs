<%- include('../partials/header', { title: 'Pilih Desain Twibbon' }) %>
    <div class="text-center mb-12">
        <h1 class="text-4xl font-extrabold text-slate-900 mb-2">Galeri Twibbon</h1>
        <p class="text-lg text-slate-600">Pilih desain favoritmu dan tunjukkan dukunganmu!</p>
    </div>

    <% if (twibbons.length> 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% twibbons.forEach(twibbon=> { %>
                <a href="/twibbon/<%= twibbon.slug %>"
                    class="group block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="overflow-hidden">
                        <img src="/twibbons/<%= twibbon.filename %>" alt="<%= twibbon.title %>"
                            class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-300">
                    </div>
                    <div class="p-5">
                        <h3 class="font-bold text-lg text-slate-800 truncate">
                            <%= twibbon.title %>
                        </h3>
                        <p class="text-sm text-blue-600 mt-2">Gunakan Desain Ini &rarr;</p>
                    </div>
                </a>
                <% }) %>
        </div>
        <% } else { %>
            <div class="text-center bg-white p-12 rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold text-slate-700">Belum Ada Twibbon</h2>
                <p class="text-slate-500 mt-2">Silakan login sebagai admin untuk mengunggah desain pertama.</p>
            </div>
            <% } %>
                <%- include('../partials/footer') %>