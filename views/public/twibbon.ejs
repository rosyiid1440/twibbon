<%- include('../partials/header', { title: twibbon.title }) %>
    <div class="max-w-5xl mx-auto">
        <div class="text-center mb-8">
            <h1 class="text-4xl font-extrabold text-slate-900 mb-2">
                <%= twibbon.title %>
            </h1>
            <p class="text-lg text-slate-600">Geser kebawah untuk hasil edit.</p>
        </div>

        <!-- 
        PERUBAHAN UTAMA:
        - flex-col-reverse: Pada mobile, membalik urutan (kontrol dulu, baru canvas).
        - lg:flex-row: Pada layar besar (desktop), kembali ke tata letak baris/sampingan.
    -->
        <div class="flex flex-col-reverse lg:flex-row gap-8 items-start">
            <!-- Kolom Kiri (di mobile jadi bawah): Canvas -->
            <div class="w-full lg:w-2/3 bg-white p-2 sm:p-4 rounded-xl shadow-lg canvas-wrapper">
                <canvas id="twibbonCanvas" data-twibbon-url="/twibbons/<%= twibbon.filename %>"></canvas>
            </div>

            <!-- Kolom Kanan (di mobile jadi atas): Kontrol -->
            <div class="w-full lg:w-1/3 bg-white p-6 rounded-xl shadow-lg space-y-4">
                <h3 class="text-xl font-bold text-slate-800 border-b pb-3">1. Atur Fotomu</h3>

                <div>
                    <label for="userPhotoInput"
                        class="w-full text-center cursor-pointer bg-blue-600 text-white font-bold py-3 px-4 rounded-lg hover:bg-blue-700 transition-colors duration-300 block">
                        Pilih Foto dari Komputer
                    </label>
                    <input type="file" id="userPhotoInput" accept="image/png, image/jpeg" class="hidden">
                </div>

                <div class="zoom-control space-y-2">
                    <label for="zoomSlider" class="font-semibold text-slate-700">Perbesar / Perkecil</label>
                    <input type="range" id="zoomSlider" min="0.1" max="3" step="0.05" value="1" disabled
                        class="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer">
                </div>

                <div class="pt-4">
                    <h3 class="text-xl font-bold text-slate-800 border-b pb-3 mb-4">2. Simpan & Bagikan</h3>
                    <div class="space-y-3">
                        <button id="downloadBtn" disabled
                            class="w-full bg-green-600 text-white font-bold py-3 px-4 rounded-lg hover:bg-green-700 transition-colors duration-300 disabled:bg-slate-300 disabled:cursor-not-allowed">
                            Download Hasil
                        </button>

                        <button id="shareBtn" disabled
                            class="hidden w-full bg-[#25D366] text-white font-bold py-3 px-4 rounded-lg hover:bg-[#1DAE52] transition-colors duration-300 disabled:bg-slate-300 disabled:cursor-not-allowed">
                            Bagikan ke WhatsApp
                        </button>
                    </div>
                </div>

                <p id="status" class="text-center text-sm text-slate-500 pt-2">Silakan pilih foto terlebih dahulu.</p>
            </div>
        </div>
    </div>

    <!-- Memuat Fabric.js dari CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/5.3.1/fabric.min.js"></script>
    <!-- Script untuk logika penggabungan gambar -->
    <script src="/js/merge.js"></script>